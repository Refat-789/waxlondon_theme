<script  src="https://a.klaviyo.com/media/js/onsite/onsite.js"></script>
<script>
    var klaviyo = klaviyo || [];
    klaviyo.init({
        account: "{{- settings.klaviyo_public_api_key -}}",
        {%- if settings.bis_show_opt_in_checkbox and settings.klaviyo_bis_list_id != empty -%}
        list: "{{- settings.klaviyo_bis_list_id -}}",
        {%- endif -%}
        platform: "shopify"
    });
    klaviyo.enable("backinstock", {
        trigger: {
            product_page_text: "{{- settings.bis_notify_trigger_text -}}",
            product_page_class: "klaviyo-bis__trigger",
            product_page_text_align: "center",
            product_page_margin: "0px",
            replace_anchor: false
        },
        modal: {
            headline: "{product_name}",
            font_family: 'ITCClearface',
            body_content: "{{- settings.bis_modal_content -}}",
            email_field_label: "Email",
            button_label: "{{- settings.bis_modal_button_text -}}",
            subscription_success_label: "{{- settings.bis_modal_success_text -}}",
            footer_content: '',
            drop_background_color: "#000",
            background_color: "#fff",
            text_color: "#222",
            button_text_color: "#fff",
            button_border_color: "#111",
            button_background_color: "#000",
            close_button_color: "#ccc",
            error_background_color: "#fcd6d7",
            error_text_color: "#C72E2F",
            success_background_color: "#d3efcd",
            success_text_color: "#1B9500"
        }
    });
</script>
