<section id="section-{{ section.id }}" class="blog-header Container">
  <div class="section-width-{{ section.settings.section_width }}">
    <h2 class="ArticleItem__Title Heading u-h6">
      {{ section.settings.blog_title }}
    </h2>
    {%- if section.settings.blog_date!= empty -%}
    <p>
      Posted on: {{ section.settings.blog_date }} {% if section.settings.blog_author != blank %} â€“ Words by <span class="article-author"> {{ section.settings.blog_author }} {% endif %}</span>
    </p>
      {%- endif -%}
    <p>
      {%- if template == "article" and article.tags != empty  -%}
            Posted in Integrity at
            <span class="Article__MetaItem">
              {% assign check = 0 %}
              {% for tag in article.tags %}{% unless check == 0 %}{{- "&#44; " -}}{% endunless %}<a href="{{ blog.url }}/tagged/{{ tag | handle }}">{{- tag -}}</a>{% assign check = 1 %}
              {% endfor %}
            </span>
      {%- endif -%}
    </p>
  </div>
</section>

<style>
  #section-{{ section.id }} {
  max-width: {{ section.settings.section_width | append: "px" }};
  margin: 0 auto;
    text-align: center;
}
  .section-width-small{
       max-width: 600px;
       margin: 0 auto;
     }
     .section-width-medium{
       max-width: 900px;
       margin: 0 auto;
     }
    .section-width-full{
       max-width: 100%;
     }
     .section-width-custom{
       max-width: {{section.settings.custom_section_width | append: "px"}};
       margin: 0 auto;
     }
   #section-{{ section.id }} h2.ArticleItem__Title.Heading.u-h6 {
      font-size: {{ section.settings.title_font_size | append: "px" }};
      line-height: 1.2;
      margin-bottom: 20px;
      color: {{ section.settings.title_color }};
      font-weight: 700;
      font-family: "ITCClearface"; 
  }
  #section-{{ section.id }}.blog-header p{
    line-height: 1.2;
    margin-bottom: 5px;
    font-size: {{ section.settings.des_font_size | append: "px" }};
    color: {{ section.settings.des_color }};
  }
   #section-{{ section.id }} span.article-author {
      text-transform: capitalize;
  }
  
@media screen and (max-width: 640px) {
   #section-{{ section.id }} h2.ArticleItem__Title.Heading.u-h6 {
      font-size: {{ section.settings.title_font_size_mobile | append: "px" }};
  }
  #section-{{ section.id }}.blog-header p{
    font-size: {{ section.settings.des_font_size_mobile | append: "px" }};
  }
}
  
</style>

{% schema %}
{
  "name": "Blog Header",
  "settings": [
      {
        "type": "text",
        "id": "blog_title",
        "label": "Blog Tittle"
      },
      {
        "type": "text",
        "id": "blog_date",
        "label": "Blog published date"
      },
      {
        "type": "text",
        "id": "blog_author",
        "label": "Blog author"
      },
      {
        "type": "range",
        "id": "title_font_size",
        "label": "Title font size",
        "min": 24,
        "max": 70,
        "step": 1,
        "unit": "px",
        "default": 55
      },
       {
        "type": "range",
        "id": "des_font_size",
        "label": "Description font size",
        "min": 12,
        "max": 50,
        "step": 1,
        "unit": "px",
        "default": 16
      },
      {
        "type": "range",
        "id": "title_font_size_mobile",
        "label": "Title font size for mobile",
        "min": 12,
        "max": 50,
        "step": 1,
        "unit": "px",
        "default": 24
      },
      {
        "type": "range",
        "id": "des_font_size_mobile",
        "label": "Description font size for mobile",
        "min": 12,
        "max": 50,
        "step": 1,
        "unit": "px",
        "default": 16
      },
      {
        "type": "color",
        "id": "title_color",
        "label": "Title colour",
        "default": "#333333"
      },
      {
        "type": "color",
        "id": "des_color",
        "label": "Description colour",
        "default": "#333333"
      },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section width",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "full",
          "label": "Full"
        },
        {
          "value": "custom",
          "label": "Custom"
        }
      ],
    "default": "medium"
    },
    {  
      "type": "range",
      "id": "custom_section_width",
      "label": "Custom section width",
      "min": 200,
      "max": 1900,
      "step": 50,
      "unit": "px",
      "default": 800
    }
  ],
  "presets": [
    {
      "category": "Blog",
      "name": "Blog Header",
      "settings": {}
    }
  ]
}
{% endschema %}
